<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center">

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<com.shamanland.fab.FloatingActionButton
			android:id="@+id/shutdown_id"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="8dp"
			app:floatingActionButtonColor="@color/shutdown_bg"
			app:floatingActionButtonSize="normal"/>

		<com.shamanland.fab.FloatingActionButton
			android:id="@+id/sleep_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="8dp"
			app:floatingActionButtonColor="@color/sleep_bg"
			app:floatingActionButtonSize="normal"/>

		<com.shamanland.fab.FloatingActionButton
			android:id="@+id/restart_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="8dp"
			app:floatingActionButtonColor="@color/restart_bg"
			app:floatingActionButtonSize="normal"/>
	</LinearLayout>
</LinearLayout>